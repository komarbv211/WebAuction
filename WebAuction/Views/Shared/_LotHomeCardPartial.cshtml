@model Lot
<div class="col">
    <div class="card h-100">
        <img height="130" src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
        <div class="card-body">
            <h5 class="card-title">
                <a asp-controller="Lots" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            </h5>
            <p class="card-text">
                @Model.Category?.Name<br />
                Left: @Model.Quantity
            </p>
            <a asp-controller="Favorite" asp-action="Add" asp-route-id="@Model.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-primary">Add to Favorite</a>
        </div>
        <div class="card-footer">
            <small class="text-muted">
                Start Price: <span class="badge bg-secondary">@Model.StartPrice</span>
            </small>
        </div>
    </div>
</div>