@model WebAuction.Models.MessageViewModel

@{
    ViewData["Title"] = "Send Message";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SendMessage">
    <div class="form-group">
        <input asp-for="SendToAll" type="checkbox" />
        <label asp-for="SendToAll">Send to all users</label>
    </div>
    @if (!Model.SendToAll)
    {
        <div class="form-group">
            <label asp-for="SelectedUserId" class="control-label"></label>
            <select asp-for="SelectedUserId" asp-items="Model.Users" class="form-control"></select>
            <span asp-validation-for="SelectedUserId" class="text-danger"></span>
        </div>
    }
    <div class="form-group">
        <label asp-for="Subject" class="control-label"></label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Body" class="control-label"></label>
        <textarea asp-for="Body" class="form-control"></textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <div class="mt-2 form-group">
        <input type="submit" value="Send" class="btn btn-primary" />
    </div>
</form>
